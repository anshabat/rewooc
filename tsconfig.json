{
  "include": ["./src"],
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "app-api": ["src/api"],
      "app-types": ["src/types"],
      "app-services/*": ["src/services/*"]
    },
    "lib": ["dom", "es2020"],
    "types": ["google.maps", "node"]
  }
}
